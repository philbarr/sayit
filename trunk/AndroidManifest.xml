<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.simplyapped.sayit"
      android:versionCode="3"
      android:versionName="1.2">
    <uses-sdk android:minSdkVersion="4" />

    <application android:icon="@drawable/sayit_icon" android:label="@string/app_name">
        <activity android:name=".SayItActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation"
    			  android:screenOrientation="portrait"
    			  android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="OptionsActivity" android:label="@string/options_label"></activity>

    <activity android:name="com.google.ads.AdActivity"
              android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
            
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
        
</manifest>